<% layout("/layout/boilerplate") %>
<body>
    <div class="max-w-4xl p-6 bg-white rounded-lg shadow-lg my-10 mx-auto">
        <h3 class="text-2xl font-semibold mb-6 text-gray-800">Create New Listing</h3>
        <form action="/listings" method="post" class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <div class="md:col-span-2 lg:col-span-1">
                <label for="title" class="block text-gray-700 font-medium mb-2">Title</label>
                <input type="text" name="listing[title]" placeholder="Enter title" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
            </div>

            <div class="md:col-span-2 lg:col-span-3">
                <label for="description" class="block text-gray-700 font-medium mb-2">Description</label>
                <textarea name="listing[description]" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" placeholder="Enter description"></textarea>
            </div>

            <div class="md:col-span-2 lg:col-span-1">
                <label for="image" class="block text-gray-700 font-medium mb-2">Image URL</label>
                <input type="text" name="listing[image]" placeholder="Enter image URL/link" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
            </div>

            <div class="md:col-span-2 lg:col-span-1">
                <label for="price" class="block text-gray-700 font-medium mb-2">Price</label>
                <input type="number" name="listing[price]" placeholder="Enter price" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
            </div>

            <div class="md:col-span-2 lg:col-span-1">
                <label for="country" class="block text-gray-700 font-medium mb-2">Country</label>
                <input type="text" name="listing[country]" placeholder="Enter country" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
            </div>

            <div class="md:col-span-2 lg:col-span-1">
                <label for="location" class="block text-gray-700 font-medium mb-2">Location</label>
                <input type="text" name="listing[location]" placeholder="Enter location" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
            </div>

            <div class="md:col-span-2 lg:col-span-3">
                <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50">Add Listing</button>
            </div>
        </form>
    </div>
</body>
